<% if @season.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@season.errors.count, "error") %> prohibited this season from being saved:</h2>

    <ul>
    <% @season.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@season) do |f| %>
  <div class="field">
    <%= f.label :show_id, "Show" %><br>
    <%= f.select(:show_id, @shows.map { |s| [s.name, s.id] }) %>
  </div>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :position %><br>
    <%= f.select(:position, 1..@season_count) %>
  </div>
  <div class="field">
    <%= f.label :permalink %><br>
    <%= f.text_field :permalink %>
  </div>
  <div class="field">
    <%= f.label :visible %><br>
    <%= f.check_box :visible %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
