<% if @admin && @admin.errors.size > 0 %>
  <div class="alert alert-danger", role="alert">
    <%= error_messages_for(@admin) %>
  </div>
<% end %>

<div id="form">
  <div class="form-group">
    <%= f.label(:email) %>
    <%= f.text_field(:email) %>
  </div>
  <div class="form-group">
    <%= f.label(:password) %>
    <%= f.password_field(:password) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
</div>