<h2>Listing shows</h2>

<%= link_to 'Add New Show', new_show_path, :class => 'new' %>

<table class="listing">
  <thead>
    <tr>
      <th>&nbsp;</th>
      <th>Name</th>
      <th>Visible</th>
      <th>Options</th>
    </tr>
  </thead>

  <tbody>
    <% @shows.each do |show| %>
      <tr>
        <td><%= show.position %></td>
        <td><%= show.name %></td>
        <td><%= show.visible ? "Yes" : "No" %></td>
        <td><!--<%= link_to 'Show', show %>-->
            <%= link_to 'Edit', edit_show_path(show) %>
            <%= link_to 'Destroy', show, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>