<div class="login">
  <%= form_tag({:action => 'attempt_login'}, {:class => 'login-form'}) do %>
  <div class="field">
    <%= label_tag(:email) %><br>
    <%= text_field_tag(:email) %>
  </div>
  <div class="field">
    <%= label_tag(:password) %><br>
    <%= password_field_tag(:password) %>
  </div>
   <div class="actions">
    <%= submit_tag("Login") %>
  </div>
  <% end %>
</div>